@page
@model Pages.Admin.Blogs.ListModel
@{
}

<div class="bg-secondary bg-opacity-10 py-2 mb-5">
    <div class="container">
        <h1>Articles</h1>
    </div>
</div>

<partial name="_Notification">

    @if (Model.Articles != null && Model.Articles.Any())
    {
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Heading</td>
                    <td> </td>
                </tr>
            </thead>
            <tbody>
                    @foreach (var article in Model.Articles)
                {
                    <tr>
                        <td>@article.Id</td>
                        <td>@article.Heading</td>
                        <td><a href="/Admin/Blogs/Edit/@article.Id">View</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="container">
        <p>No articles were found!</p>
    </div>
}
</partial>

